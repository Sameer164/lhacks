WindowManager:
    MainWindow:
    SecondWindow:
    Questionnaire:
    Login:
    Profile:
    




<Button>:
    font_size: 40
    color: 0.1,0.5,0.6,1

<MainWindow>:
    name: "main"

    named: named
    email: email
    password: password

    FloatLayout:



        TextInput:
            hint_text: "Name"
            background_color: 1, 1, 1, 1
            size_hint: 0.3, 0.07
            pos_hint: {'center_x': 0.5, 'top': 0.65}
            id: named
            multiline: False

        TextInput:
            hint_text: "Email"
            background_color: 1, 1, 1, 1
            size_hint: 0.3, 0.07
            pos_hint: {'center_x': 0.5, 'top': 0.55}
            id: email
            multiline: False


        TextInput:
            hint_text: "Password"
            password: True
            background_color: 1, 1, 1, 1
            size_hint: 0.3, 0.07
            pos_hint: {'center_x': 0.5, 'top': 0.45}
            id: password
            multiline: False

        Button:
            text: "Sign Up!"
            background_color: 0.1, 0.5, 0.6, 1
            pos_hint: {"x":0.43, "top":0.3}
            size_hint: 0.15, 0.09

            on_release:
                app.root.current = "second" if root.good() else "main"
                root.manager.transition.direction = "left"
        Button:
            text: "Login Instead"
            background_color: 0.1, 0.5, 0.6, 1
            pos_hint: {"x":0.4, "top":0.2}
            size_hint: 0.2, 0.09

            on_release:
                app.root.current = "login"
                root.manager.transition.direction = "left"



<SecondWindow>:
    name: "second"
    Label: 
        text: "Successfully Signed Up. "+ root.get_code() + ". Note this code. This is what you'll use for logging in.\n \n Complete the questionnaire to get started."


    Button:
        text: "Go Back"
        background_color: 0.1, 0.5, 0.6, 1
        size_hint: 0.15, 0.09
        on_release:
            app.root.current = "main"
            root.manager.transition.direction = "right"
    
    Button:
        text: "Continue"
        background_color: 0.1, 0.5, 0.6, 1
        size_hint: 0.15, 0.09
        pos_hint: {"x": 0.85, "y":0}
        on_release:
            app.root.current = "questionnaire"
            root.manager.transition.direction = "left"



<Questionnaire>:
    name: "questionnaire"

    FloatLayout:

        Spinner:
            id: whatever
            text: "Gender"
            size_hint: 0.3, 0.1
            pos_hint:{'center_x':.5, 'top': 0.9}
            
            values: ["Male","Female","Non Binary"]       
            on_text:
                root.on_spinner_select(self.text, "g")

        Spinner:
            id: whatever
            text: "Preference"
            size_hint: 0.3, 0.1
            pos_hint:{'center_x':.5, 'top': 0.75}
            
            values: ["Lesbian","gay","Straight", "Bisexual", "Asexual", "Demisexual"]       
            on_text:
                root.on_spinner_select(self.text, "p")
        
        Spinner:
            id: whatever
            text: "Age"
            size_hint: 0.3, 0.1
            pos_hint:{'center_x':.5, 'top': 0.6}
            
            values: ["18-25","25-35","25-45", "45-55", "60+"]       
            on_text:
                root.on_spinner_select(self.text, "a")
        



    Button:
        text: "Go Back"
        background_color: 0.1, 0.5, 0.6, 1
        size_hint: 0.15, 0.09
        pos_hint: {"x": 0, "y":0}
        on_release:
            app.root.current = "main"
            root.manager.transition.direction = "right"
    
    Button:
        text: "Continue"
        background_color: 0.1, 0.5, 0.6, 1
        size_hint: 0.15, 0.09
        pos_hint: {"x": 0.85, "y":0}
        on_release:
            app.root.current = "login"
            root.manager.transition.direction = "left"

<Login>:
    name: "login"
    code: code

    FloatLayout:



        TextInput:
            hint_text: "code"
            background_color: 1, 1, 1, 1
            size_hint: 0.3, 0.07
            pos_hint: {'center_x': 0.5, 'top': 0.65}
            id: code
            multiline: False
        Button:
            text: "Login"
            background_color: 0.1, 0.5, 0.6, 1
            pos_hint: {"x":0.4, "top":0.2}
            size_hint: 0.2, 0.09

            on_release:
                app.root.current = "profile" if root.valid() else "login"
                root.manager.transition.direction = "left"


<Profile>:
    name: "profile"
    text: "Helloooooo"